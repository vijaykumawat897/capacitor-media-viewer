{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/esm",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es6",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "capacitor.plugin.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}

